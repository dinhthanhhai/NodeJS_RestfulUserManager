<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="update-user-container">
        <form action="/" method="post">
            <div><b>Update user <%= JSON.stringify(dataUser)%></b></div><br>
            <div>
                <label>First name:</label>
                <input name="firstName" value="<%= dataUser.firstName %>">
            </div>
            <div>
                <label>Last name:</label>
                <input name="lastName" value="<%= dataUser.lastName %>">
            </div>
            <div>
                <label>Email:</label>
                <input name="email" value="<%= dataUser.email %>">
            </div>
            <div>
                <label>Address:</label>
                <input name="address" value="<%= dataUser.address %>">
            </div>
            <input type="text" value="<%=dataUser.id%>" hidden name="id">
            <div>
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
    </div>
</body>
</html>